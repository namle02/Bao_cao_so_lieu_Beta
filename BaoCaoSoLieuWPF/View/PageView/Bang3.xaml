<UserControl
    x:Class="BaoCaoSoLieu.View.PageView.Bang3"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BaoCaoSoLieu.View.PageView"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
    <UserControl.Resources>
        <Style x:Key="EditableCellStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="BorderThickness" Value="0.5" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="EditableTextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer
                                x:Name="PART_ContentHost"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="Background" Value="White" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
        <Style x:Key="DataTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
        <Style x:Key="TitleStyle" TargetType="Label">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,10" />
        </Style>
    </UserControl.Resources>
    <ScrollViewer>
        <Grid HorizontalAlignment="Stretch" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <!--  Header bảng  -->
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="45" />
                    <RowDefinition Height="45" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <!--  Header to  -->
                <Border
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.Column="0"
                    BorderBrush="Black"
                    BorderThickness="0.5">
                    <TextBlock Style="{StaticResource HeaderTextStyle}" Text="TT" />
                </Border>
                <Border
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.Column="1"
                    BorderBrush="Black"
                    BorderThickness="0.5">
                    <TextBlock Style="{StaticResource HeaderTextStyle}" Text="Khoa Phòng" />
                </Border>
                <Border
                    Grid.Row="0"
                    Grid.Column="2"
                    Grid.ColumnSpan="3"
                    BorderBrush="Black"
                    BorderThickness="0.5">
                    <TextBlock
                        FontWeight="Bold"
                        Style="{StaticResource HeaderTextStyle}"
                        Text="Phẫu thuật" />
                </Border>
                <Border
                    Grid.Row="0"
                    Grid.Column="5"
                    Grid.ColumnSpan="2"
                    BorderBrush="Black"
                    BorderThickness="0.5">
                    <TextBlock
                        FontWeight="Bold"
                        Style="{StaticResource HeaderTextStyle}"
                        Text="Dịch vụ yêu cầu" />
                </Border>

                <!--  Dòng 2, header con  -->
                <Border
                    Grid.Row="1"
                    Grid.Column="2"
                    BorderBrush="Black"
                    BorderThickness="0.5">
                    <TextBlock Style="{StaticResource HeaderTextStyle}" Text="Kế hoạch" />
                </Border>
                <Border
                    Grid.Row="1"
                    Grid.Column="3"
                    BorderBrush="Black"
                    BorderThickness="0.5">
                    <TextBlock Style="{StaticResource HeaderTextStyle}" Text="Thực hiện" />
                </Border>
                <Border
                    Grid.Row="1"
                    Grid.Column="4"
                    BorderBrush="Black"
                    BorderThickness="0.5">
                    <TextBlock Style="{StaticResource HeaderTextStyle}" Text="Tỷ lệ TH/KH" />
                </Border>
                <Border
                    Grid.Row="1"
                    Grid.Column="5"
                    BorderBrush="Black"
                    BorderThickness="0.5">
                    <TextBlock Style="{StaticResource HeaderTextStyle}" Text="Tổng" />
                </Border>
                <Border
                    Grid.Row="1"
                    Grid.Column="6"
                    BorderBrush="Black"
                    BorderThickness="0.5">
                    <TextBlock Style="{StaticResource HeaderTextStyle}" Text="Tỷ lệ DVYC/PT" />
                </Border>
            </Grid>

            <!--  Bảng chứa dữ liệu  -->
            <ItemsControl Grid.Row="1" ItemsSource="{Binding Bang3List}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <!--  STT  -->
                            <Border
                                Grid.Column="0"
                                Height="45"
                                BorderBrush="Black"
                                BorderThickness="0.5">
                                <TextBlock
                                    Style="{StaticResource DataTextStyle}"
                                    Text="{Binding Stt}"
                                    ToolTip="STT" />
                            </Border>
                            <!--  Tên khoa  -->
                            <Border
                                Grid.Column="1"
                                Height="45"
                                BorderBrush="Black"
                                BorderThickness="0.5">
                                <TextBlock Style="{StaticResource DataTextStyle}" Text="{Binding TenKhoa}" />
                            </Border>
                            <!--  Kế hoạch  -->
                            <Border
                                Grid.Column="2"
                                Height="45"
                                Style="{StaticResource EditableCellStyle}">
                                <TextBox Style="{StaticResource EditableTextBoxStyle}" Text="{Binding KeHoach, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </Border>
                            <!--  Thực hiện  -->
                            <Border
                                Grid.Column="3"
                                Height="45"
                                Style="{StaticResource EditableCellStyle}">
                                <TextBox Style="{StaticResource EditableTextBoxStyle}" Text="{Binding ThucHien, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </Border>
                            <!--  Tỷ lệ thực hiện / kế hoạch  -->
                            <Border
                                Grid.Column="4"
                                Height="45"
                                BorderBrush="Black"
                                BorderThickness="0.5">
                                <TextBlock Style="{StaticResource DataTextStyle}" Text="{Binding TyLeTH_KH}" />
                            </Border>
                            <!--  Tổng  -->
                            <Border
                                Grid.Column="5"
                                Height="45"
                                Style="{StaticResource EditableCellStyle}">
                                <TextBox Style="{StaticResource EditableTextBoxStyle}" Text="{Binding Tong, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </Border>
                            <!--  Tỷ lệ DVYC/PT  -->
                            <Border
                                Grid.Column="6"
                                Height="45"
                                BorderBrush="Black"
                                BorderThickness="0.5">
                                <TextBlock Style="{StaticResource DataTextStyle}" Text="{Binding TyLeDVYC_PT}" />
                            </Border>

                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <!--  Dòng tổng cộng  -->
            <Grid Grid.Row="2" Height="35">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border
                    Grid.Column="0"
                    BorderBrush="Black"
                    BorderThickness="0.5">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="18" />
                </Border>
                <Border
                    Grid.Column="1"
                    BorderBrush="Black"
                    BorderThickness="0.5">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="16"
                        FontWeight="Bold"
                        Text="Tổng cộng" />
                </Border>
                <Border
                    Grid.Column="2"
                    BorderBrush="Black"
                    BorderThickness="0.5">
                    <TextBox
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Style="{StaticResource EditableTextBoxStyle}"
                        Text="{Binding DongTongCong.KeHoach, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </Border>
                <Border
                    Grid.Column="3"
                    BorderBrush="Black"
                    BorderThickness="0.5">
                    <TextBox
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Style="{StaticResource EditableTextBoxStyle}"
                        Text="{Binding DongTongCong.ThucHien, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </Border>
                <Border
                    Grid.Column="4"
                    BorderBrush="Black"
                    BorderThickness="0.5">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Style="{StaticResource DataTextStyle}"
                        Text="{Binding DongTongCong.TyLeTH_KH}" />
                </Border>
                <Border
                    Grid.Column="5"
                    BorderBrush="Black"
                    BorderThickness="0.5">
                    <TextBox
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Style="{StaticResource EditableTextBoxStyle}"
                        Text="{Binding DongTongCong.Tong, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </Border>
                <Border
                    Grid.Column="6"
                    BorderBrush="Black"
                    BorderThickness="0.5">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Style="{StaticResource DataTextStyle}"
                        Text="{Binding DongTongCong.TyLeDVYC_PT}" />
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>



</UserControl>
