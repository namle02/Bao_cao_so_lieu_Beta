<UserControl
    x:Class="BaoCaoSoLieu.View.PageView.Bang2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BaoCaoSoLieu.View.PageView"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
    <UserControl.Resources>
        <Style x:Key="EditableCellStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="BorderThickness" Value="0.5" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="EditableTextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer
                                x:Name="PART_ContentHost"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="Background" Value="White" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
        <Style x:Key="DataTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
        <Style x:Key="TitleStyle" TargetType="Label">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,10" />
        </Style>
    </UserControl.Resources>
    <ScrollViewer>
        <Grid HorizontalAlignment="Stretch" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <!--  Header bảng  -->
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="45" />
                    <RowDefinition Height="45" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="180" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <!--  Dòng 1: header nhóm  -->
                <Border
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.Column="0"
                    BorderBrush="Black"
                    BorderThickness="0.5">
                    <TextBlock Style="{StaticResource HeaderTextStyle}" Text="TT" />
                </Border>
                <Border
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.Column="1"
                    BorderBrush="Black"
                    BorderThickness="0.5">
                    <TextBlock Style="{StaticResource HeaderTextStyle}" Text="Khoa Phòng" />
                </Border>
                <Border
                    Grid.Row="0"
                    Grid.Column="2"
                    Grid.ColumnSpan="3"
                    BorderBrush="Black"
                    BorderThickness="0.5">
                    <TextBlock
                        FontWeight="Bold"
                        Style="{StaticResource HeaderTextStyle}"
                        Text="Chỉ tiêu KH lượt tuần 12" />
                </Border>
                <Border
                    Grid.Row="0"
                    Grid.Column="5"
                    Grid.ColumnSpan="3"
                    BorderBrush="Black"
                    BorderThickness="0.5">
                    <TextBlock
                        FontWeight="Bold"
                        Style="{StaticResource HeaderTextStyle}"
                        Text="Công suất điều trị giường tuần 12" />
                </Border>
                <Border
                    Grid.Row="0"
                    Grid.Column="8"
                    Grid.ColumnSpan="3"
                    BorderBrush="Black"
                    BorderThickness="0.5">
                    <TextBlock
                        FontWeight="Bold"
                        Style="{StaticResource HeaderTextStyle}"
                        Text="TT HSBA" />
                </Border>

                <!--  Dòng 2: các cột nhỏ  -->
                <Border
                    Grid.Row="1"
                    Grid.Column="2"
                    BorderBrush="Black"
                    BorderThickness="0.5">
                    <TextBlock Style="{StaticResource HeaderTextStyle}" Text="NB/Tuần" />
                </Border>
                <Border
                    Grid.Row="1"
                    Grid.Column="3"
                    BorderBrush="Black"
                    BorderThickness="0.5">
                    <TextBlock Style="{StaticResource HeaderTextStyle}" Text="Thực hiện" />
                </Border>
                <Border
                    Grid.Row="1"
                    Grid.Column="4"
                    BorderBrush="Black"
                    BorderThickness="0.5">
                    <TextBlock Style="{StaticResource HeaderTextStyle}" Text="Tỷ lệ" />
                </Border>
                <Border
                    Grid.Row="1"
                    Grid.Column="5"
                    BorderBrush="Black"
                    BorderThickness="0.5">
                    <TextBlock Style="{StaticResource HeaderTextStyle}" Text="KH" />
                </Border>
                <Border
                    Grid.Row="1"
                    Grid.Column="6"
                    BorderBrush="Black"
                    BorderThickness="0.5">
                    <TextBlock Style="{StaticResource HeaderTextStyle}" Text="Ngày thực hiện" />
                </Border>
                <Border
                    Grid.Row="1"
                    Grid.Column="7"
                    BorderBrush="Black"
                    BorderThickness="0.5">
                    <TextBlock Style="{StaticResource HeaderTextStyle}" Text="Công suất" />
                </Border>
                <Border
                    Grid.Row="1"
                    Grid.Column="8"
                    BorderBrush="Black"
                    BorderThickness="0.5">
                    <TextBlock Style="{StaticResource HeaderTextStyle}" Text="Kế hoạch" />
                </Border>
                <Border
                    Grid.Row="1"
                    Grid.Column="9"
                    BorderBrush="Black"
                    BorderThickness="0.5">
                    <TextBlock Style="{StaticResource HeaderTextStyle}" Text="Thực hiện" />
                </Border>
                <Border
                    Grid.Row="1"
                    Grid.Column="10"
                    BorderBrush="Black"
                    BorderThickness="0.5">
                    <TextBlock Style="{StaticResource HeaderTextStyle}" Text="Tỷ lệ" />
                </Border>
            </Grid>

            <!--  Bảng dữ liệu  -->

            <ItemsControl Grid.Row="2" ItemsSource="{Binding Bang2List}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="180" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <!--  STT  -->
                            <Border
                                Grid.Column="0"
                                Height="45"
                                BorderBrush="Black"
                                BorderThickness="0.5">
                                <TextBlock
                                    Style="{StaticResource DataTextStyle}"
                                    Text="{Binding Stt}"
                                    ToolTip="STT" />
                            </Border>
                            <!--  Khoa phòng  -->
                            <Border
                                Grid.Column="1"
                                Height="45"
                                BorderBrush="Black"
                                BorderThickness="0.5">
                                <TextBlock
                                    Style="{StaticResource DataTextStyle}"
                                    Text="{Binding TenKhoa}"
                                    TextWrapping="Wrap" />
                            </Border>
                            <!--  NB/Tuần  -->
                            <Border
                                Grid.Column="2"
                                Height="45"
                                Style="{StaticResource EditableCellStyle}">
                                <TextBox Style="{StaticResource EditableTextBoxStyle}" Text="{Binding KeHoach_LuotNB, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </Border>
                            <!--  Thực hiện  -->
                            <Border
                                Grid.Column="3"
                                Height="45"
                                Style="{StaticResource EditableCellStyle}">
                                <TextBox Style="{StaticResource EditableTextBoxStyle}" Text="{Binding ThucHien_LuotNB, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </Border>
                            <!--  Tỷ lệ  -->
                            <Border
                                Grid.Column="4"
                                Height="45"
                                BorderBrush="Black"
                                BorderThickness="0.5">
                                <TextBlock Style="{StaticResource DataTextStyle}" Text="{Binding SoVoiKeHoach_NB}" />
                            </Border>
                            <!--  Kế hoạch công suất giường  -->
                            <Border
                                Grid.Column="5"
                                Height="45"
                                Style="{StaticResource EditableCellStyle}">
                                <TextBox Style="{StaticResource EditableTextBoxStyle}" Text="{Binding KeHoach_CongSuatGiuong, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </Border>
                            <!--  Thực hiện công suất giường  -->
                            <Border
                                Grid.Column="6"
                                Height="45"
                                Style="{StaticResource EditableCellStyle}">
                                <TextBox Style="{StaticResource EditableTextBoxStyle}" Text="{Binding ThucHien_CongSuatGiuong, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </Border>
                            <!--  Tỷ lệ công suất  -->
                            <Border
                                Grid.Column="7"
                                Height="45"
                                BorderBrush="Black"
                                BorderThickness="0.5">
                                <TextBlock Style="{StaticResource DataTextStyle}" Text="{Binding SoVoiKeHoach_CongSuatGiuong}" />
                            </Border>
                            <!--  Kế hoạch HSBA  -->
                            <Border
                                Grid.Column="8"
                                Height="45"
                                Style="{StaticResource EditableCellStyle}">
                                <TextBox Style="{StaticResource EditableTextBoxStyle}" Text="{Binding KeHoach_HSBA, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </Border>
                            <!--  Thực hiện HSBA  -->
                            <Border
                                Grid.Column="9"
                                Height="45"
                                Style="{StaticResource EditableCellStyle}">
                                <TextBox Style="{StaticResource EditableTextBoxStyle}" Text="{Binding ThucHien_HSBA, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </Border>
                            <!--  Tỷ lệ HSBA  -->
                            <Border
                                Grid.Column="10"
                                Height="45"
                                BorderBrush="Black"
                                BorderThickness="0.5">
                                <TextBlock Style="{StaticResource DataTextStyle}" Text="{Binding SoVoiKeHoach_HSBA}" />
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>


        </Grid>
    </ScrollViewer>
</UserControl>
