    x:Class="BaoCaoSoLieu.View.ControlView.TabControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:BaoCaoSoLieu.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BaoCaoSoLieu.View.ControlView"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pageview="clr-namespace:BaoCaoSoLieu.View.PageView"
    xmlns:view="clr-namespace:BaoCaoSoLieu.View.PageView"
    xmlns:vm="clr-namespace:BaoCaoSoLieu.ViewModel.PageViewModel"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converter:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converter:LoadingTextConverter x:Key="LoadingTextConverter" />
        <converter:InverseBooleanConverter x:Key="InverseBooleanConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <!--  Thanh điều khiển  -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <!--  Thanh chọn bảng  -->
            <ComboBox
                Width="auto"
                Margin="25"
                VerticalAlignment="Top"
                BorderBrush="Green"
                FontSize="18"
                IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"
                ItemsSource="{Binding TableOptions}"
                SelectedItem="{Binding SelectedTable, Mode=TwoWay}"
                Style="{StaticResource MaterialDesignOutlinedComboBox}" />

            <!--  Thanh chọn ngày tháng  -->
            <Border
                Grid.Column="1"
                Margin="25,20"
                Padding="20"
                VerticalAlignment="Top"
                Background="{DynamicResource MaterialDesignPaper}"
                CornerRadius="16"
                Effect="{DynamicResource MaterialDesignElevation2}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="240" />
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="240" />
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>

                    <!--  Label "Từ ngày"  -->
                    <TextBlock
                        Grid.Column="0"
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="Từ ngày:" />

                    <!--  DatePicker Từ ngày  -->
                    <DatePicker
                        Grid.Column="1"
                        Width="auto"
                        VerticalAlignment="Center"
                        materialDesign:HintAssist.Hint="Chọn ngày bắt đầu"
                        materialDesign:TextFieldAssist.HasClearButton="True"
                        FontSize="18"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"
                        Language="vi-VN"
                        SelectedDate="{Binding TuNgay, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        SelectedDateFormat="Short"
                        Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />

                    <!--  Spacer nhỏ  -->
                    <Rectangle
                        Grid.Column="2"
                        Width="40"
                        Fill="Transparent" />

                    <!--  Label "Đến ngày"  -->
                    <TextBlock
                        Grid.Column="3"
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="Đến ngày:" />

                    <!--  DatePicker Đến ngày  -->
                    <DatePicker
                        Grid.Column="4"
                        Width="auto"
                        VerticalAlignment="Center"
                        materialDesign:HintAssist.Hint="Chọn ngày kết thúc"
                        materialDesign:TextFieldAssist.HasClearButton="True"
                        FontSize="18"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"
                        Language="vi-VN"
                        SelectedDate="{Binding DenNgay, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        SelectedDateFormat="Short"
                        Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />

                    <!--  Spacer nhỏ  -->
                    <Rectangle
                        Grid.Column="5"
                        Width="40"
                        Fill="Transparent" />

                    <!--  Button Lọc dữ liệu  -->
                    <Button
                        Grid.Column="6"
                        Height="45"
                        materialDesign:ButtonAssist.CornerRadius="12"
                        Background="Green"
                        Command="{Binding TimKiemCommand}"
                        IsEnabled="{Binding TimKiemCommand.IsEnabled}"
                        Style="{StaticResource MaterialDesignRaisedButton}">
                        <StackPanel Orientation="Horizontal">
                            <ProgressBar
                                Width="20"
                                Height="20"
                                Margin="0,0,10,0"
                                IsIndeterminate="True"
                                Style="{StaticResource MaterialDesignCircularProgressBar}"
                                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            <TextBlock FontSize="16" Text="{Binding IsLoading, Converter={StaticResource LoadingTextConverter}, ConverterParameter='Lọc dữ liệu'}" />
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>
        </Grid>

        <!--  Hiển thị bảng dữ liệu  -->
        <ContentControl Grid.Row="1" Content="{Binding CurrentTableVM}">
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type vm:Bang1VM}">
                    <view:Bang1 />
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:Bang2VM}">
                    <view:Bang2 />
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:Bang3VM}">
                    <view:Bang3 />
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:Bang4VM}">
                    <view:Bang4 />
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:CapNhatVM}">
                    <view:CapNhat />
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>

        <DockPanel Grid.Row="2" LastChildFill="False">
            <Button
                Width="250"
                Height="50"
                Margin="25"
                Background="Green"
                Command="{Binding XuatBaoCaoCommand}"
                Content="Xuất báo cáo"
                DockPanel.Dock="Right"
                FontSize="18"
                FontWeight="SemiBold"
                IsEnabled="{Binding XuatBaoCaoCommand.IsEnabled}"
                ToolTip="Xuất báo cáo" />
        </DockPanel>

        <!--  Loading Overlay  -->
        <Grid
            Grid.RowSpan="3"
            Background="#80000000"
            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar
                    Width="60"
                    Height="60"
                    IsIndeterminate="True"
                    Style="{StaticResource MaterialDesignCircularProgressBar}" />
                <TextBlock
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Text="{Binding LoadingText}" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>