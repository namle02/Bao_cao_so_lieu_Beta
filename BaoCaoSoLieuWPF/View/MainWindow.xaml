<Window
    x:Class="BaoCaoSoLieu.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BaoCaoSoLieu"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:BaoCaoSoLieu.View.ControlView"
    Title="Báo cáo số liệu tuần"
    Width="1600"
    Height="1000"
    Icon="/Assets/Logo/faviconw.ico"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <uc:Header Grid.Row="0" />
        <uc:TabControl Grid.Row="1" DataContext="{Binding TabControlVM}" />
        <uc:Footer Grid.Row="2" />
    </Grid>
</Window>
